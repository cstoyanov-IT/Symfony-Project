{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau produit{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Créer un nouveau produit</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div>
            {{ form_label(form.designation, 'Désignation', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.designation, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div>
            {{ form_label(form.univers, 'Univers', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.univers, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div>
            {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="btn-create">
                Créer le produit
            </button>
            <a href="{{ path('product_list') }}" class="btn-secondary">
                Retour à la liste
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}